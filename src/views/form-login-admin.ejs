<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Bienvenido Admin...!!!'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Bienvenido Admin...!!!</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/users/admin/...???" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
                    <div class="col-12 col-md-6">
						<label for="email" class="form-label">E-mail</label>
						<input type="email" id="email" name="email" value="<%= locals.oldData ? oldData.email : null %>" placeholder="Por ej: xxx@ddd.com" class="form-input">
                        <p style="font-size: 14px; font-weight: 400; color: red;"><%= locals.errors && errors.email ? errors.email.msg : null %></p>
                    </div>
                    <div class="col-12 col-md-6">
						<label for="contrasenia" class="form-label">CONTRASEÑA</label>
						<input type="password" id="contrasenia" name="contrasenia" placeholder="CONTRASEÑA" class="form-input">
                        <p style="font-size: 14px; font-weight: 400; color: red;"><%= locals.errors && errors.contrasenia ? errors.contrasenia.msg : null %></p>
					</div>
                    <div class="col-12 col-md-6">
						<label for="contrasenia" class="form-label">Confirme CONTRASEÑA</label>
						<input type="password" id="contrasenia" name="contrasenia" placeholder="Confirme CONTRASEÑA" class="form-input">
                        <p style="font-size: 14px; font-weight: 400; color: red;"><%= locals.errors && errors.contrasenia ? errors.contrasenia.msg : null %></p>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Registrarse</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>